<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="fill_horizontal|fill_vertical|center_horizontal"
    android:background="@drawable/wallpaper_talk"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    android:shrinkColumns="*"
    android:stretchColumns="*" >
    
    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal|center_vertical" >

        <Button
            android:id="@+id/btn_app_absc"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/boutons"
            android:text="Appels en abscences"
            android:textColor="@android:color/white"
            android:textSize="40sp"
            android:textStyle="bold" />

    </TableRow>
    
    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal|center_vertical" >

        <Button
            android:id="@+id/btn_app_rec"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/boutons"
            android:text="Appels reçus"
            android:textColor="@android:color/white"
            android:textSize="40sp"
            android:textStyle="bold" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal|center_vertical" >

        <Button
            android:id="@+id/btn_app_em"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/boutons"
            android:text="Appels émis"
            android:textColor="@android:color/white"
            android:textSize="40sp"
            android:textStyle="bold" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal|center_vertical" >

        <Button
            android:id="@+id/btn_effacer"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/boutons"
            android:text="Effacer journal"
            android:textColor="@android:color/white"
            android:textSize="40sp"
            android:textStyle="bold" />

    </TableRow>

    <TableRow
        android:id="@+id/TableRow01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal|center_vertical" >

        <Button
            android:id="@+id/btn_quitter"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/boutons"
            android:text="Quitter"
            android:textColor="@android:color/white"
            android:textSize="40sp"
            android:textStyle="bold" />

    </TableRow>

</TableLayout>